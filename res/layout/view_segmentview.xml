<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wrapAndWrap"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_segment_unlock"
        style="@style/wrapAndWrap"
        android:background="@drawable/tv_segment_unlock_selector"
        android:clickable="true"
        android:padding="6dp"
        android:text="未加锁"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_segment_lock"
        style="@style/wrapAndWrap"
        android:background="@drawable/tv_segment_lock_selector"
        android:clickable="true"
        android:padding="6dp"
        android:text="已加锁"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>