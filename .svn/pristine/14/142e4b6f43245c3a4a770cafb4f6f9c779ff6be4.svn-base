<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_softmanager_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:padding="8dp" />

    <RelativeLayout
        style="@style/wrapAndWrap"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_softmanager_item_icon" >

        <TextView
            android:id="@+id/tv_softmanager_item_name"
            style="@style/wrapAndWrap"
            android:ellipsize="start"
            android:singleLine="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_softmanager_item_location"
            style="@style/wrapAndWrap"
            android:layout_below="@id/tv_softmanager_item_name"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_softmanager_item_size"
            style="@style/wrapAndWrap"
            android:layout_alignBottom="@id/tv_softmanager_item_location"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />
    </RelativeLayout>

</RelativeLayout>