<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchAndWrap"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_safephone_item_pic"
        style="@style/wrapAndWrap"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        style="@style/matchAndWrap"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_safephone_item_pic"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_safephone_item_name"
            style="@style/matchAndWrap"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_safephone_item_phone"
            style="@style/matchAndWrap"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>