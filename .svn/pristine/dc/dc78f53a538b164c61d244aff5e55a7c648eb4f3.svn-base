<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/pageTitle"
        android:layout_marginBottom="5dp"
        android:text="号码归属地查询" />

    <EditText
        android:id="@+id/et_phonearea_phone"
        style="@style/matchAndWrap"
        android:layout_margin="15dp"
        android:background="@drawable/et_phonearea_background"
        android:hint="请输入号码"
        android:inputType="phone"
        android:maxLength="11"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_phonearea_check"
        style="@style/wrapAndWrap"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/tv_phonearea_seletor"
        android:clickable="true"
        android:gravity="center"
        android:padding="12dp"
        android:text="联网查询"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#838383" />

    <TextView
        android:id="@+id/tv_phonearea_result"
        style="@style/matchAndWrap"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="18sp" />

</LinearLayout>