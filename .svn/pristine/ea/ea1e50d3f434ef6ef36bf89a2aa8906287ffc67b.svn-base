<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchAndMatch"
    android:orientation="vertical" >

    <TextView
        style="@style/pageTitle"
        android:text="1.欢迎使用手机防盗" />

    <TextView
        style="@style/matchAndWrap"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="手机防盗功能支持:"
        android:textSize="18sp" />

    <TextView
        style="@style/protectText"
        android:text="SIM卡变更报警" />

    <TextView
        style="@style/protectText"
        android:text="GPS追踪" />

    <TextView
        style="@style/protectText"
        android:text="远程锁屏" />

    <TextView
        style="@style/protectText"
        android:text="远程销毁数据" />

    <RelativeLayout style="@style/matchAndMatch" >

        <ImageView
            style="@style/wrapAndWrap"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:src="@drawable/step_1" />

        <RelativeLayout
            style="@style/matchAndWrap"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:padding="5dp" >

            <LinearLayout
                style="@style/wrapAndWrap"
                android:layout_centerInParent="true" >

                <ImageView
                    style="@style/wrapAndWrap"
                    android:src="@drawable/presence_online" />

                <ImageView
                    style="@style/wrapAndWrap"
                    android:src="@drawable/presence_invisible" />

                <ImageView
                    style="@style/wrapAndWrap"
                    android:src="@drawable/presence_invisible" />

                <ImageView
                    style="@style/wrapAndWrap"
                    android:src="@drawable/presence_invisible" />

                <ImageView
                    style="@style/wrapAndWrap"
                    android:src="@drawable/presence_invisible" />
            </LinearLayout>

            <TextView
                style="@style/protectButton"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/next"
                android:onClick="nextClick"
                android:text="下一步" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>